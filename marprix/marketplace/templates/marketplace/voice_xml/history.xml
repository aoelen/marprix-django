{% extends 'marketplace/voice_xml/layout.xml' %}

{% block content %}
<menu id="product{{ product.id }}" dtmf="true">
    <prompt>
        <break time="1s"/>

        <!--The price of {{ product.name }} is: {{ product.price }} CEDI per {{ product.unit.name }}.-->
        <audio src="http://django-static.vps.abaart.nl/group2/django/audio/ENG/product/thepriceof.wav"/>
        <audio src="http://django-static.vps.abaart.nl/group2/django/audio/ENG/shared/products/{{ product.name }}.wav"/>
        <audio src="http://django-static.vps.abaart.nl/group2/django/audio/ENG/product/is.wav"/>
        <audio src="http://django-static.vps.abaart.nl/group2/django/audio/ENG/shared/numbers/{{ product.price }}.wav"/>
        <audio src="http://django-static.vps.abaart.nl/group2/django/audio/ENG/shared/units/{{ product.unit.name }}.wav"/>

        <!--Press 1 if youd like to retrieve other prices in this category.
        Press 2 if youd like to retrieve prices from other categories.
        Press 3 if youd like to retrieve prices using a product ID-->
        <audio src="http://django-static.vps.abaart.nl/group2/django/audio/ENG/history/endhistory.wav"/>
    </prompt>
    <choice next="products/{{ product.category_id }}"/>
    <choice next="categories"/>
    <choice dtmf="0" next="IDs"/>
</menu>
{% endblock %}
