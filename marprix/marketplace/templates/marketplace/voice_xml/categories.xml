{% extends 'marketplace/voice_xml/layout.xml' %}

{% block content %}
<menu id="menu1" dtmf="true">
    <prompt>
        <break time="1s"/>
        {% for category in all_categories %}
        <audio src="http://django-static.vps.abaart.nl/group2/django/audio/ENG/shared/for.wav"/>
        <audio src="http://django-static.vps.abaart.nl/group2/django/audio/ENG/shared/categories/{{ category.name }}.wav"/>
        <audio src="http://django-static.vps.abaart.nl/group2/django/audio/ENG/shared/press.wav"/>
        <audio src="http://django-static.vps.abaart.nl/group2/django/audio/ENG/shared/numbers/{{ forloop.counter }}.wav"/>
        {% endfor %}
        <!--<audio src="https://django-static.vps.abaart.nl/group2/django/wav/ENG/categories.wav"/>-->

    </prompt>
    {% for category in all_categories %}
    <choice next="products/{{ category.id }}"/>
    {% endfor %}

</menu>
{% endblock %}
